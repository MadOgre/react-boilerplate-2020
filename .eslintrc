{
  "extends": ["airbnb", "airbnb/hooks"],
  "parserOptions": {
    "ecmaFeatures": {
        "jsx": true,
        "experimentalDecorators": true
    }
  },
  "globals": {
    "React": true
  },
  "parser": "babel-eslint",
  "settings": {
    "import/resolver": {
      "node": {},
      "webpack": {}
    }
  },
  "rules": {
    "quotes": [2, "double"],
    "no-console": 0,
    "comma-dangle": 0,
    "react/state-in-constructor": 0,
    "react/no-unused-state": 2
  }
}
